<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/avatarImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0.2"/>
        <LinearLayout
            android:id="@+id/rightItemPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.8" >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Repository name:" />
                    <TextView
                        android:id="@+id/repositoryNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Repo Ime" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Author name:" />
                <TextView
                    android:id="@+id/authorNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author Ime" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="watchers:" />
                <TextView
                    android:id="@+id/watchersText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="watchers" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="forks:" />
                <TextView
                    android:id="@+id/forksText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="forks" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="issues:" />
                <TextView
                    android:id="@+id/issuesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="issues" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>